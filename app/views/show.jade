header
  .pokemon-name {{name}}
  .pokemon-type-list
    span.pokemon-type(class="pokemon-type-{{type.type.name}}" ng-repeat="type in types | orderBy:'slot'") {{type.type.name}}
  .pokemon-id(ng-if="id") \#{{id}}

main.pokemon
  .pokemon-thumbs
    img(alt="{{name}}" ng-src="{{thumb1}}")
    img(alt="{{name}}" ng-src="{{thumb2}}")

  ul.pokemon-stat-list
    li.pokemon-stat(ng-repeat="stat in stats")
      span.pokemon-stat-name {{stat.stat.name | nameStat}}:
      span.pokemon-stat-bar
        span.pokemon-stat-value(style="width:{{stat.base_stat * 2}}px") {{stat.base_stat}}

nav
  a.btn-navigation(href="javascript:history.back()") Back
